{
  "name": "@appbricks/identity",
  "version": "0.0.21",
  "description": "Authentication and Identity SDK",
  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --quiet --fix",
    "build": "tsc",
    "test": "NODE_OPTIONS=--max_old_space_size=8192 jest --runInBand",
    "build-publish": "tsc && npm publish --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/appbricks/node-identity.git"
  },
  "keywords": [
    "AppBricks",
    "authentication",
    "identity"
  ],
  "author": "Mevan Samaratunga",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/appbricks/node-identity/issues"
  },
  "homepage": "https://github.com/appbricks/node-identity",
  "dependencies": {
    "@appbricks/utils": "^0.0.31",
    "aws-amplify": "^5.0.5",
    "axios": "^1.2.1",
    "gravatar": "^1.8.2",
    "redux-observable": "^2.0.0",
    "rxjs": "^7.6.0"
  },
  "devDependencies": {
    "@appbricks/test-utils": "^0.0.24",
    "@types/gravatar": "^1.8.3",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.13",
    "@types/node-fetch": "^2.6.2",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "gmail-tester": "^1.3.8",
    "jest": "^29.3.1",
    "lodash": ">=4.17.21",
    "node-fetch": "^2.6.7",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  },
  "files": [
    "LICENSE",
    "README.md",
    "package.json",
    "package-lock.json",
    "lib/"
  ],
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
